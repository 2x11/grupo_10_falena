<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head'); %>

<body>
  <!-- importa header -->
  <%- include('./partials/header'); %>
  <div class="genre_body">
    <section class="vip-products">

      <!--caja contenedora de productos-->
      <div class="container">
        <section>
          <div class="row productos">

            <% genres.forEach(genre => { %>
            <div class="col-12 col-md-6 col-lg-3">
              <div class="contenido">
                <figure>
                  <a href="/genre/<%= genre.id %>"><img src="/images/genres/<%= genre.image %>" alt="" id="genre_image"></a>
                </figure>
                <article>
                    <%= genre.name %>
                </article>
              </div>
            </div>

            <% }) %>

            </header>


            <!-- importa footer -->
            <%- include('./partials/footer') %>

</body>

</html>