<!DOCTYPE html>
<html lang="es">

  <%- include('./partials/head'); %>

<body>
  <%- include('./partials/header'); %> 
  <!-- contenido -->

  <div class="container login-body">

      <div class="row">
        <div class="col-md-3 col-lg-3 "></div>
        <div class="col-12 col-md-6 col-lg-6 login-login">
              <form action="" method="POST" class="box">
                <input type="email" class="form-control 
                <%= (typeof old != 'undefined' && old.email && !errors.email)?" is-valid ":
                (typeof errors != 'undefined' && errors.email)?"is-invalid ":
                '' %>" id="inputEmail" aria-describedby="emailHelp" value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>" placeholder="Correo electrónico" name="email" spellcheck="false">


                <h6 class="text-danger" id="emailError"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </h6>


                <input type="password" class="form-control <%= (typeof errors != 'undefined' && errors.password)?" is-invalid ":
                '' %>" id="inputPassword" placeholder="Contraseña" name="password" spellcheck="false">


                <h6 class="text-danger" id="passwordError"><%= (typeof errors != 'undefined' && errors.password)?errors.password.msg: "" %> </h6>
                

                <label>
                  <input type="checkbox" class="remember" name="remember"> Recuerdame
                </label>
                
              <input type="submit" value="Iniciar sesión"> 
              <a href="" class="password-reset"> ¿Has olvidado tu contraseña? </a>
            </form>
        </div>

      </div> <!-- Fin del row-->



    <div class="row">
      <div class="col-md-3 col-lg-3 "></div>
      <div class="col-12 col-md-6 col-lg-6 login-media" >
        <h5>Ingresa con:</h5></br>                                                     <!-- CSS centrar esto-->
        <ul>
          <li><img src="/images/img-twitter.png" alt=""></li>
          <li><img src="/images/img-facebook.png" alt=""></li>
          <li><img src="/images/img-google+.png" alt=""></li>
        </ul>
      </div>
      <div class="col-3"></div>
    </div> <!-- FIn de Row2-->



    <div class="row">
      <div class="col-md-3 col-lg-3 "></div>
      <div class="col-12 col-md-6 col-lg-6 login-register">
        <ul>
          <li>
            <h6>¿Todavía no estas registrado? Registrate ahora, ¡Es gratis!</h6> 
          </li>
        </ul>
        <a href="/user/register"><button>Registrate</button></a>
            </div>
    </div> <!-- Fin de row 3-->



  </div> <!-- Fin de Container-->
  <%- include('./partials/footer') %>


  <!-- Fin Del Contenido -->
</body>

</html>