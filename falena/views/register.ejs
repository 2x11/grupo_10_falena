<!DOCTYPE html>
<html lang="es">

  <%- include('./partials/head'); %>

<body>
  <!-- contenido -->
  <%- include('./partials/header'); %> 

  <div class="container register-body">
        <div class="row">
          <div class="col-3"></div>
          <div class="col-12 col-md-6 col-lg-6 register-register">
              <div>
                <form action="" method="POST">
                </div>
                <div>
                  <input  type="text" class="form-control <%= (typeof old != 'undefined' && old.firstname && !errors.firstname)?" is-valid ":
                  (typeof errors != 'undefined' && errors.firstname)?"is-invalid ":
                  '' %>" id="exampleInputfirstname" aria-describedby="firstnameHelp" value="<%= (typeof old != 'undefined' && old.firstname)?old.firstname:'' %>" id="firstname" name="firstname" placeholder="Nombre">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.firstname)?errors.firstname.msg: "" %>
                </small>
                </div>
                <div>
                  <input type="text" class="form-control <%= (typeof old != 'undefined' && old.lastname && !errors.lastname)?" is-valid ":
                  (typeof errors != 'undefined' && errors.lastname)?"is-invalid ":
                  '' %>" id="exampleInputlastname" aria-describedby="lastnameHelp" value="<%= (typeof old != 'undefined' && old.lastname)?old.lastname:'' %>" id="lastname" name="lastname" placeholder="Apellido">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.lastname)?errors.lastname.msg: "" %>
                </small>
                </div>
                <div>
                  <input type="text" class="form-control <%= (typeof old != 'undefined' && old.dni && !errors.dni)?" is-valid ":
                  (typeof errors != 'undefined' && errors.dni)?"is-invalid ":
                  '' %>" id="exampleInputdni" aria-describedby="dniHelp" value="<%= (typeof old != 'undefined' && old.dni)?old.dni:'' %>" id="dni" name="dni" placeholder="DNI">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.dni)?errors.dni.msg: "" %>
                </small>
                </div>
                <div>
                  <input type="text" class="form-control <%= (typeof old != 'undefined' && old.email && !errors.email)?" is-valid ":
                  (typeof errors != 'undefined' && errors.email)?"is-invalid ":
                  '' %>" id="exampleInputEmail" aria-describedby="emailHelp" value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>" id="email" name="email" placeholder="Correo lectrónico">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %>
                </small>
                </div>


                <div>
                  <input type="text" class="form-control <%= (typeof old != 'undefined' && old.emailRepeat && !errors.emailRepeat)?" is-valid ":
                  (typeof errors != 'undefined' && errors.emailRepeat)?"is-invalid ":
                  '' %>" id="exampleInputEmailRepeat" aria-describedby="emailRepeatHelp" value="<%= (typeof old != 'undefined' && old.emailRepeat)?old.emailRepeat:'' %>" id="emailRepeat" name="emailRepeat" placeholder="Repita su correo electrónico">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.emailRepeat)?errors.emailRepeat.msg: "" %>
                </small>
                </div>


                <div>
                  <input type="password" class="form-control <%= (typeof old != 'undefined' && old.password && !errors.password)?" is-valid ":
                  (typeof errors != 'undefined' && errors.password)?"is-invalid ":
                  '' %>" id="exampleInputpassword" aria-describedby="passwordHelp" value="<%= (typeof old != 'undefined' && old.password)?old.password:'' %>" id="password" name="password" placeholder="Contraseña">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.password)?errors.password.msg: "" %>
                </small>
                </div>


                <div>
                  <input type="password" class="form-control <%= (typeof old != 'undefined' && old.passwordRepeat && !errors.passwordRepeat)?" is-valid ":
                  (typeof errors != 'undefined' && errors.passwordRepeat)?"is-invalid ":
                  '' %>" id="exampleInputpasswordRepeat" aria-describedby="passwordRepeatHelp" value="<%= (typeof old != 'undefined' && old.passwordRepeat)?old.passwordRepeat:'' %>" id="passwordRepeat" name="passwordRepeat" placeholder="Repita su contraseña">
                  <small
                  class="text-danger"><%= (typeof errors != 'undefined' && errors.passwordRepeat)?errors.passwordRepeat.msg: "" %>
                </small>
                </div>


                <div>
                  <button type="submit"> Registrate </button>
                </div>

              </form>
          </div>
          <div class="col-3"></div>
        </div> <!-- FIN ROW 2-->

    <div class="row">
      <div class="col-3"></div>
      <div class="col-12 col-md-6 col-lg-6  register-media">
        <h5>Registrate con:</h5>                                                       <!-- CSS centrar esto-->
        <ul>
          <li><img src="/images/img-twitter.png" alt=""></li>
          <li><img src="/images/img-facebook.png" alt=""></li>
          <li><img src="/images/img-google+.png" alt=""></li>
        </ul>
      </div>
      <div class="col-3"></div>



    </div> <!-- FIN DE ROW 3-->
    <div class="row">
      <div class="col-3"></div>
      <div class="col-12 col-md-6 col-lg-6  register-login">
        <ul>
          <li>
            <h6>¿Ya estas registrado? Ingresa ahora.</h6> 
          </li>
          <li>
            <a href="/user/login"><button >Ingresar</button></a>
          </li>
        </ul>
      </div>
      <div class="col-3"></div>
    </div> <!-- FIN DE ROW 4-->
  </div> <!-- Fin de Container-->

  <%- include('./partials/footer') %>

  <!-- Fin Del Contenido -->

  <!-- scripts de bootstrap-->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js "
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj "
    crossorigin="anonymous "></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js "
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo "
    crossorigin="anonymous "></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js "
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI "
    crossorigin="anonymous "></script>
</body>

</html>